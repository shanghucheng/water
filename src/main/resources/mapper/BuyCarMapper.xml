<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.mapper.BuyCarMapper">
  <resultMap id="BaseResultMap" type="com.water.entity.BuyCar">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="imageUrl" jdbcType="VARCHAR" property="imageurl" />
    <result column="water_name" jdbcType="VARCHAR" property="waterName" />
    <result column="price" jdbcType="VARCHAR" property="price" />
    <result column="water_num" jdbcType="VARCHAR" property="waterNum" />
    <result column="total" jdbcType="VARCHAR" property="total" />
  </resultMap>

 <select id="getBuyCar" resultType="map">
   SELECT
   imageUrl,
   water_name waterName,
   water_num waterNum,
   price,
   total
   FROM
   buy_car
   WHERE
   1 = 1 
   <if test = "id!=null and id!=''" >
   AND buy_car.user_id = $ { id }
  </if>
 </select>

</mapper>